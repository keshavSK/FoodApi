<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/rowUserImage"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher">

    </ImageView>

    <TextView
        android:id="@+id/tvRowUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/rowUserImage"
        android:text="Android Developement"
        android:textColor="@color/colorBlack"
        android:textSize="16sp">

    </TextView>

    <TextView
        android:id="@+id/tvRowUserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRowUserName"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/rowUserImage"
        android:text="Android@gmail.com"
        android:textSize="16sp">

    </TextView>

</RelativeLayout>